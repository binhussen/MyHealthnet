	@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.About>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Layout.cshtml";
	var Campaigns = (ContentModels.Campaigns)Model.Root().Children().Where(x => x.IsDocumentType("Campaigns")).FirstOrDefault();
	var Voluntaries = (ContentModels.Voluntaries)Model.Root().Children().Where(x => x.IsDocumentType("Voluntaries")).FirstOrDefault();
	var Moneys = (ContentModels.Moneys)Model.Root().Children().Where(x => x.IsDocumentType("Moneys")).FirstOrDefault();
}
		<div class="pager-header">
            <div class="container">
                <div class="page-content">
                    <h2>About Us</h2>
                    <p>Help today because tomorrow you may be the one who <br>needs more helping!</p>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">About Us</li>
                    </ol>
                </div>
            </div>
        </div><!-- /Page Header -->
        
        <section class="about-section bg-grey bd-bottom padding">
            <div class="container">
                <div class="row about-wrap">
                    <div class="col-md-6 xs-padding">
                        <div class="about-image">
                            <img src="img/about.jpg" alt="about image">
                        </div>
                    </div>
                    <div class="col-md-6 xs-padding">
                        <div class="about-content">
                            <h2>You are definitely intrigued to <br> discover who we are.</h2>
                            <p>The secret to happiness lies in helping others. Never underestimate the difference YOU can make in the lives of the poor, the abused and the helpless.</p>
                            <a href="#" class="default-btn">More About Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- /About Section -->

		<section class="team-section bg-grey bd-bottom circle shape padding">
            <div class="container">
                <div class="section-heading text-center mb-40">
                    <h2>@Voluntaries.VoluntariesTitle</h2>
                    <span class="heading-border"></span>
                    <p>@Voluntaries.VoluntariesDetail</p>
                </div><!-- /Section Heading -->
                <div class="team-wrapper row">
                    <div class="col-lg-6 sm-padding">
                        <div class="team-wrap row">
                    @{
                    foreach(ContentModels.Voluntary item in Voluntaries.Children.Take(Convert.ToInt32(Voluntaries.NumberOfVoluntaries)))
                    {
                        
                            <div class="col-md-6">
                                <div class="team-details">
                                   <img src=@item.VoluntaryImage.Url() alt="team">
                                    <div class="hover">
                                        <h3>@item.VoluntaryTitle<span>@item.VoluntaryDescription</span></h3>
                                    </div>
                                </div>
                            </div><!-- /Team-1 -->
                            }}
                        </div>
                    </div>
                    <div class="col-lg-6 sm-padding">
                        <div class="team-content">
                            <h2>@Voluntaries.SubTitle</h2>
                            <h3>@Voluntaries.SubContent</h3>
                            <p>@Voluntaries.SubDetail</p>
                            <ul class="check-list">
                        @{
                            foreach(ContentModels.Voluntary item in Voluntaries.Children.Take(Convert.ToInt32(Voluntaries.NumberOfVoluntaries)))
                            {
                                if (@item.VoluntaryChecklist != "")
                                {
                                    <li><i class="fa fa-check"></i>@item.VoluntaryChecklist</li>
                                }
                            }
                        }
                            </ul>
                            <a href="#" class="default-btn">Join With Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- /Team Section -->

		<section id="counter" class="counter-section">
		    <div class="container">
                <ul class="row counters">
                @{
                     foreach(ContentModels.Money item in Moneys.Children.Take(Convert.ToInt32(Moneys.NumberOfMoneys)))
					{ 
                    <li class="col-md-3 col-sm-6 sm-padding">
                        <div class="counter-content">
                            <i class="ti-money"></i>
                            <h3 class="counter">@item.MoneyAmount</h3>
                            <h4 class="text-white">@item.MoneyTitle</h4>
                        </div>
                    </li>
                    }}
                </ul>
		    </div>
		</section><!-- Counter Section -->
		
		<section class="contact-section padding">
            <div id="google_map"></div><!-- /#google_map -->
            <div class="container">
                <div class="row contact-wrap">
                    <div class="col-md-6 xs-padding">
                        <div class="contact-info">
                            <h3>Get in touch</h3>
                            <p>The secret to happiness lies in helping others. Never underestimate the difference YOU can make in the lives of the poor, the abused and the helpless.</p>
                            <p>The secret to happiness lies in helping others. Never underestimate the difference.</p>
                            <ul>
                                <li><i class="ti-location-pin"></i> 315 West 33rd Street New York, NY 10001</li>
                                <li><i class="ti-mobile"></i> +1 212 425 8617, +1 212 425 8533</li>
                                <li><i class="ti-email"></i> Youremail@companyname.com</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6 xs-padding">
                        <div class="contact-form">
                            @Model.Value("placeholder")
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- /Contact Section -->
